<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/bakgrunnmeny"
    android:orientation="vertical">


    <TextView

        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/nyttspill"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/buttonnewgame"
        android:padding="10dp"
         />
    <Button
        android:id="@+id/regler"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="@string/buttonrules"
        android:padding="10dp"
         />
    <Button
        android:id="@+id/sprak"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:text="@string/buttonlanguage"
         />
    <Button
        android:id="@+id/avslutt"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:padding="10dp"
        android:text="@string/buttonexit"
         />

    <TextView

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/winscore"
        android:paddingTop="20dp"
        android:paddingLeft="55dp"
        android:gravity="bottom"
       />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lostscore"
        android:paddingLeft="55dp"
        android:gravity="bottom"
      />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conscore"
        android:paddingLeft="55dp"
        android:gravity="bottom"
        />
    </LinearLayout>