<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/spillbakgrunnliggende"
    tools:context=".MainActivity"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_gravity="left">


    <Button
        android:id="@+id/nyttspill"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/buttonnewgame"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/regler"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="@string/buttonrules"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/sprak"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:text="@string/buttonlanguage"
        />
    <Button
        android:id="@+id/avslutt"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:text="@string/buttonexit"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/winscore"
            android:background="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lostscore"
            android:background="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/conscore"
            android:background="#000000"/>
    </LinearLayout>

</LinearLayout>